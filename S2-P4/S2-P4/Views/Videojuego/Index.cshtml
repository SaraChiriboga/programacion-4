@model IEnumerable<S2_P4.Models.Videojuego>
    <h2>Catálogo de Videojuegos</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titulo</th>
                <th>Plataforma</th>
                <th>Clasificación</th>
            </tr>
        </thead>

        <tbody>
        @foreach(var juego in Model)
        {
            <tr>
                <td>@juego.Id</td>
                <td>@juego.Titulo</td>
                <td>@juego.Plataforma</td>
                <td>@juego.Clasificacion</td>
            </tr>
        }
        </tbody>
    </table>
@{
}
